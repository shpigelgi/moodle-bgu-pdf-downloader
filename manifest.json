{
  "manifest_version": 3,
  "name": "Moodle BGU PDF Downloader",
  "version": "1.1.0",
  "description": "Bulk download PDFs, PowerPoint, Word, and Excel files from Moodle course pages with section filtering.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Download Moodle PDFs",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://moodle.bgu.ac.il/moodle/course/view.php*"
      ],
      "js": [
        "src/utils.js",
        "src/content.js"
      ]
    }
  ],
  "permissions": [
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://moodle.bgu.ac.il/*"
  ]
}